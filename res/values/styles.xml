<?xml version="1.0" encoding="utf-8"?>


<resources xmlns:android="http://schemas.android.com/apk/res/android">

<style name="Theme.Scommix" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_scommix</item>
        <item name="popupMenuStyle">@style/PopupMenu.Scommix</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Scommix</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Scommix</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Scommix</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Scommix</item>
        <item name="actionModeBackground">@drawable/cab_background_top_scommix</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_scommix</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Scommix</item>

</style>


<style name="Theme.search" parent="@style/Theme.AppCompat.Light">
    
     <item name="actionBarStyle">@style/ActionBarWidget</item>
</style>

 <style name="ActionBarWidget" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- SearchView customization-->
        <item name="searchViewSearchIcon">@drawable/ic_action_search</item>
        <item name="searchViewCloseIcon">@android:drawable/ic_delete</item>
        <item name="searchViewAutoCompleteTextView">@style/AutoCompleteTextView</item>
    </style>
 
    <style name="AutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/white</item>
       
    </style>


    
 <style name="MyActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
    
 <style name="SubTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
             <item name="android:textColor">@android:color/white</item>
     
     
 </style>


    <style name="ActionBar.Solid.Scommix" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_scommix</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_scommix</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_scommix</item>
        <item name="progressBarStyle">@style/ProgressBar.Scommix</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="subtitleTextStyle">@style/SubTitle</item>
    </style>

    <style name="ActionBar.Transparent.Scommix" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_scommix</item>
        <item name="progressBarStyle">@style/ProgressBar.Scommix</item>
    </style>
	
    <style name="PopupMenu.Scommix" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_scommix</item>	
    </style>
	
    <style name="DropDownListView.Scommix" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_scommix</item>
    </style>

    <style name="ActionBarTabStyle.Scommix" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_scommix</item>
    </style>
	
    <style name="DropDownNav.Scommix" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_scommix</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_scommix</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_scommix</item>
    </style>
    
    <style name="ProgressBar.Scommix" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_scommix</item>
    </style>
    
    <style name="ActionButton.CloseMode.Scommix" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_scommix</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Scommix.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Scommix</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Scommix</item>
    </style>
    
    <style name="nowCardStyle" parent="android:Widget.TextView">
        <item name="android:background">@drawable/search_bg_shadow</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#707070</item>
    </style>
    
     <style name="SelectableItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    
        <style name="Theme.scommixblack" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>
    
     
    
         <style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>
  
          <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat">
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
   
    

</resources>
