<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/commentboxprofilepic"
            android:layout_width="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_height="60dp"
             />

        <TextView
            android:id="@+id/commentboxstatususer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/commentboxprofilepic"
            android:text="Name"
            android:clickable="true"
            style="@android:style/TextAppearance.SearchResult.Title"
            android:layout_marginLeft="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" />

           <TextView
               android:id="@+id/commentboxtatustext"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/statustimeincommentbox"
               android:layout_below="@+id/statustimeincommentbox"
               android:text="Comment"
             android:textColor="@android:color/black"
               android:layout_marginTop="4dp"
               android:textAppearance="?android:attr/textAppearanceSmall"
               android:textIsSelectable="true" />

           <TextView
               android:id="@+id/statustimeincommentbox"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/commentboxstatususer"
               android:layout_below="@+id/commentboxstatususer"
               android:gravity="right"
               
               android:text="time of upload"
               android:textAppearance="?android:attr/textAppearanceSmallInverse"
               android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

