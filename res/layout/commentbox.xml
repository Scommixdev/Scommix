<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    

    <ListView
        android:id="@+id/usercommentslist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear22"
        android:divider="@null"
        android:dividerHeight="5dp"
        
        android:layout_alignParentLeft="true"
        android:background="@android:color/white"
    
 
        >
    </ListView>
   
        <View 
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/usercommentslist"
            android:background="@drawable/ab_solid_scommix"
            />
    <LinearLayout
        android:id="@+id/linear22"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >
     

        <EditText
            android:id="@+id/enter_comment"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
           
            android:layout_weight="1"
           
            android:ems="10"
            android:hint="Send comment" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/send_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
          
            android:onClick="sendMessage"
            android:src="@drawable/ic_action_send_now"
        
             />
    </LinearLayout>

