<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/nowCardStyle"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/friendrequestprofilepic"
            android:layout_width="50dip"
            android:layout_height="50dip"
            />

        <TextView
            android:id="@+id/friendrequestpersonname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/friendrequestprofilepic"
            android:text="User Name" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/deletefriendrequest"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/acceptfriendrequest"
        android:layout_alignBottom="@+id/acceptfriendrequest"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_trans_button"
        android:src="@drawable/cross" />

    <ImageView
        android:id="@+id/acceptfriendrequest"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="6dp"
        android:layout_alignBottom="@+id/relativeLayout1"
        android:layout_toLeftOf="@+id/deletefriendrequest"
        android:background="@drawable/selector_trans_button"
        android:src="@drawable/frndreq" />

</RelativeLayout>